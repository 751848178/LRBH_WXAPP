/* registered.wxss */
page {
  width: 100%;
  height: 100%;
}
.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f0f0f2;
}

.item {
  display: flex;
  margin: 24rpx;
  height: 88rpx;
}

.code {
  border: 3rpx solid #FF6091;
  color: #FF6091;
  font-size: 28rpx;
  height: 56rpx;
  margin: auto 0rpx auto 24rpx;
  line-height: 56rpx;
  text-align: center;
}

text {
  font-size: 32rpx;
  line-height: 88rpx;
  flex: 0 0 100rpx;
}

input {
  padding:10rpx;
  font-size: 32rpx;
  border: 3rpx solid #d9d9d9;
  background: white;
  line-height: 88rpx;
  margin: auto 0rpx auto 24rpx;
  flex: 1 1 0rpx;
}

.radio {
  margin: auto 0rpx auto 24rpx;
}

.submit {
  background: #FF6091;
  color: white;
  font-size: 32rpx;
  height: 88rpx;
  margin: auto auto;
  line-height: 88rpx;
  text-align: center;
  width: 70%;
}

.item .t1 {
  margin: 0rpx 0rpx 0rpx 120rpx;
  flex: 1 1 100%;
  text-align: right;
}

.item .t2 {
  flex : 1 1 100%;
  color: #FF6091;
}