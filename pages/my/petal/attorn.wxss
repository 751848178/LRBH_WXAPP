.lineblock,.lineblock label,.lineblock input{box-sizing:border-box;}
.lineblock{width:100%;height:62rpx;line-height:62rpx;}
.lineblock label{display:inline-block;float:left;padding-left:30rpx;width:30%;height:62rpx;line-height:62rpx;}
.lineblock input{display:inline-block;float:left;width:70%;height:62rpx;line-height:62rpx;}
.line {height: 3rpx;background-color: #e7e7e7;margin: 10rpx 0 10rpx 30rpx;}
.line-fill {height:2rpx;background-color: #e7e7e7;margin: 10rpx 0 20rpx 0;}
.remark{margin: 20rpx 0 30rpx 30rpx;}
.form button{width: 80%;height: 88rpx;background-color: #FF6091;color: white;font-size: 32rpx;text-align: center;line-height: 88rpx;margin-top: 30rpx;}
.form button.hover {background-color: rgba(255, 96 , 145, 0.5);}
.font-count{margin:-52rpx 20rpx 0 0;float:right;color:#d9d9d9;}
.red{color:red;}