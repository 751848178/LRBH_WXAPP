/* setting.wxss */
page {
  width: 100%;
  height: 100%;
}
.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f0f0f2;
}

.list {
  margin: 20rpx 0 0 0;
  display: flex;
  flex-direction: column;
  background-color: white;
  height: auto;
  width: 100%;
}

.list .item {
  display: flex;
  height: 88rpx;
}

.list .item .main {
  height: 40rpx;
  margin: auto 20rpx;
  font-size: 28rpx;
  flex: 1 0 0rpx;
  line-height: 40rpx;
}

.arrow {
  height: 24rpx;
  flex: 0 0 24rpx;
  margin: auto 20rpx;
}