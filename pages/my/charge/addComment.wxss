page {
  width: 100%;
  height: 100%;
}
.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f0f0f2;
}

.contentArea{
  padding-top: 10rpx;
  padding-left: 20rpx;
  background: white;
  font-size: 28rpx;
}
.contentArea text{
  font-size: 28rpx;
  text-align: center;
  line-height: 56rpx;
}

.contentArea .lineblock{
  display:flex;
}
.contentArea .line{
  height: 3rpx;
  width: 90%;
  background-color: #d9d9d9;
  margin: 20rpx 0 20rpx 0;
}
.contentArea .title{
  padding-top: 10rpx;
  width: 30%;
  font-size: 32rpx;
}
.form button{
  width: 80%;
  height: 88rpx;
  background-color: #FF6091;
  color: white;
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 30rpx;
}

.form button.hover {
  background-color: rgba(255, 96 , 145, 0.5);
}
.stars{
  width:480rpx;
}
.stars text{display:inline-block;width:40rpx;height:40rpx;line-height:40rpx;text-align:center;}