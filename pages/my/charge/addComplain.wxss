page {
  width: 100%;
  height: 100%;
}
.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f0f0f2;
}

.contentArea{
  padding-top: 10rpx;
  padding-left: 20rpx;
  background: white;
  font-size: 28rpx;
}
.contentArea .value{
  font-size: 28rpx;
  text-align: center;
  line-height: 56rpx;
  width:300rpx;
  border: #f0f0f2 solid 1rpx;
}

.contentArea .lineblock{
  display:flex;
}
.contentArea .line{
  height: 3rpx;
  width: 90%;
  background-color: #d9d9d9;
  margin: 20rpx 0 20rpx 0;
}
.contentArea .title{
  padding-top: 10rpx;
  width: 30%;
  font-size: 32rpx;
}
.form button{
  width: 80%;
  height: 88rpx;
  background-color: #FF6091;
  color: white;
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
  margin-top: 30rpx;
}

.form button.hover {
  background-color: rgba(255, 96 , 145, 0.5);
}